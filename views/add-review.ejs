<%- include('partials/head') %>
<body>
  <main>
    <a href="/" id="home">Home</a>
    <%- include('partials/header') %>
    <% if (reviewId) { %>
      <h1>Review Added</h1>
      <p>Your review has been added successfully!</p>
      <p>Review ID: <%= reviewId %></p>
    <% } else { %>
      <form id="add-review-form" action="/add-review" method="post">
        <label for="filmid">Film ID:</label>
        <input type="number" id="filmid" name="filmid" required><br><br>
        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" required min="1" max="10"><br><br>
        <label for="review">Review:</label>
        <textarea id="review" name="review" required></textarea><br><br>
        <input type="hidden" name="userId" value="<%= user.userID %>">
        <button type="submit" value="Add Review">Add Review</button>
      </form>
    <% } %>
  </main>
</body>
</html>